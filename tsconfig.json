{
    "compilerOptions": {
        "module": "Node16",
        "target": "es2017",
        "outDir": "out",
        "rootDir": "src",
        "sourceMap": true,
        "removeComments": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "allowJs": true,
        "moduleResolution": "node16",
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", ".vscode-test"]
}